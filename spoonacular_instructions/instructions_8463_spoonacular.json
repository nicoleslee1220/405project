[{"name":"","steps":[{"number":1,"step":"In a medium mixing bowl, stir together the yeast and 1/2 cup of the flour.","ingredients":[{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"},{"id":18375,"name":"yeast","localizedName":"yeast","image":"yeast-granules.jpg"}],"equipment":[{"id":405907,"name":"mixing bowl","localizedName":"mixing bowl","image":"mixing-bowl.jpg"}]},{"number":2,"step":"Add the warm water and mix until blended. Cover with a damp towel and set aside in a warm-ish place in your kitchen for about 30 minutes, until bubbly.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[],"length":{"number":30,"unit":"minutes"}},{"number":3,"step":"Add the 2 tablespoons of oil and the beer to the yeast mixture and mix well.","ingredients":[{"id":18375,"name":"yeast","localizedName":"yeast","image":"yeast-granules.jpg"},{"id":14003,"name":"beer","localizedName":"beer","image":"beer.jpg"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[]},{"number":4,"step":"Add the cornmeal and the 1 teaspoon salt; mix again.","ingredients":[{"id":35137,"name":"cornmeal","localizedName":"cornmeal","image":"cornmeal.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[]},{"number":5,"step":"Add the flour 1/2 cup at a time, mixing as you go until you have a soft dough. Turn it onto a board and knead for 5-8 minutes until satiny and smooth.Wash and dry the mixing bowl and coat it with olive oil.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":0,"name":"dough","localizedName":"dough","image":"pizza-dough"},{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"}],"equipment":[{"id":405907,"name":"mixing bowl","localizedName":"mixing bowl","image":"mixing-bowl.jpg"}],"length":{"number":8,"unit":"minutes"}},{"number":6,"step":"Place the dough back in the bowl, turn it to coat with the oil, and cover with a kitchen towel.","ingredients":[{"id":0,"name":"dough","localizedName":"dough","image":"pizza-dough"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":221439,"name":"kitchen towels","localizedName":"kitchen towels","image":"dish-towel.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":7,"step":"Let rise for 1 1/2 hours, until doubled.Divide the dough into four pieces and form each into a bowl. Set them on a cutting board and cover again.","ingredients":[{"id":0,"name":"dough","localizedName":"dough","image":"pizza-dough"}],"equipment":[{"id":404716,"name":"cutting board","localizedName":"cutting board","image":"cutting-board.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}],"length":{"number":120,"unit":"minutes"}},{"number":8,"step":"Let rest for 30 minutes to 1 hour. (You can also refrigerate the dough at this point.","ingredients":[{"id":0,"name":"dough","localizedName":"dough","image":"pizza-dough"}],"equipment":[],"length":{"number":90,"unit":"minutes"}},{"number":9,"step":"Remove it from the fridge at least 30 minutes before cooking).","ingredients":[],"equipment":[],"length":{"number":30,"unit":"minutes"}}]}]
