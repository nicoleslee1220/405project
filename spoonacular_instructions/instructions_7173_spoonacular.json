[{"name":"","steps":[{"number":1,"step":"Soak fish in buttermilk for an hour. This is not necessary if your fish are very fresh, as in just-caught.","ingredients":[{"id":1230,"name":"buttermilk","localizedName":"buttermilk","image":"buttermilk.jpg"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[]},{"number":2,"step":"In a large cast iron skillet, render the bacon over low heat until it is about 1/2 cooked.","ingredients":[{"id":10123,"name":"bacon","localizedName":"bacon","image":"raw-bacon.png"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":3,"step":"Remove the bacon and drain on paper towels.","ingredients":[{"id":10123,"name":"bacon","localizedName":"bacon","image":"raw-bacon.png"}],"equipment":[{"id":405895,"name":"paper towels","localizedName":"paper towels","image":"paper-towels.jpg"}]},{"number":4,"step":"On a plate, or in a shallow dish, stir together the cornmeal, flour, cayenne and a healthy pinch of salt.","ingredients":[{"id":35137,"name":"cornmeal","localizedName":"cornmeal","image":"cornmeal.png"},{"id":2031,"name":"ground cayenne pepper","localizedName":"ground cayenne pepper","image":"chili-powder.jpg"},{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[]},{"number":5,"step":"Remove the fish from the buttermilk and set on a work surface. Divide the lemon slices and place half inside the cavity of each fish, overlapping the slices, and then sprinkling with parsley, salt and pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":1230,"name":"buttermilk","localizedName":"buttermilk","image":"buttermilk.jpg"},{"id":11297,"name":"parsley","localizedName":"parsley","image":"parsley.jpg"},{"id":9150,"name":"lemon","localizedName":"lemon","image":"lemon.png"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[]},{"number":6,"step":"Wrap a slice of partially cooked bacon around each fish.","ingredients":[{"id":10862,"name":"cooked bacon","localizedName":"cooked bacon","image":"cooked-bacon.jpg"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"},{"id":10018364,"name":"wrap","localizedName":"wrap","image":"flour-tortilla.jpg"}],"equipment":[]},{"number":7,"step":"Roll the fish in the cornmeal mixture.","ingredients":[{"id":35137,"name":"cornmeal","localizedName":"cornmeal","image":"cornmeal.png"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"},{"id":0,"name":"roll","localizedName":"roll","image":"dinner-yeast-rolls.jpg"}],"equipment":[]},{"number":8,"step":"Heat the bacon fat up again until it is very hot. Slip in the fish and cook 4-6 minutes per side, or until crisp and cooked through. The time will need to be adjusted depending on whether the fish is boned.","ingredients":[{"id":4609,"name":"bacon drippings","localizedName":"bacon drippings","image":"raw-bacon.png"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[],"length":{"number":6,"unit":"minutes"}}]}]
