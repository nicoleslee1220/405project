[{"name":"","steps":[{"number":1,"step":"Melt butter in a deep saute pan with a cover. Once the butter's melted, and the foam's subsided, add the cabbage and stir to coat.","ingredients":[{"id":11109,"name":"cabbage","localizedName":"cabbage","image":"cabbage.jpg"},{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":2,"step":"Add salt and pepper, to taste, red onion, apple, and allspice packet, cover the pan and lower the flame to low-medium, turning once in a while, until the cabbage is soft, but still slightly firm, about 15 minutes.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":10011282,"name":"red onion","localizedName":"red onion","image":"red-onion.png"},{"id":2001,"name":"allspice","localizedName":"allspice","image":"allspice-ground.jpg"},{"id":11109,"name":"cabbage","localizedName":"cabbage","image":"cabbage.jpg"},{"id":9003,"name":"apple","localizedName":"apple","image":"apple.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":15,"unit":"minutes"}},{"number":3,"step":"Remove lid and deglaze with the red wine, bring up flame and cook, uncovered, until the wine is reduced by at least half.","ingredients":[{"id":14096,"name":"red wine","localizedName":"red wine","image":"red-wine.jpg"},{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[]},{"number":4,"step":"Add the red wine vinegar reduce a little, add the molasses or cane syrup and toss to coat. Cook 2 to 3 more minutes, remove allspice packet, season with salt and pepper, to taste.","ingredients":[{"id":1022068,"name":"red wine vinegar","localizedName":"red wine vinegar","image":"red-wine-vinegar.jpg"},{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":0,"name":"cane syrup","localizedName":"cane syrup","image":"sugar-in-bowl.png"},{"id":2001,"name":"allspice","localizedName":"allspice","image":"allspice-ground.jpg"},{"id":19304,"name":"molasses","localizedName":"molasses","image":"molasses.jpg"}],"equipment":[],"length":{"number":3,"unit":"minutes"}}]}]
