[{"name":"","steps":[{"number":1,"step":"Pour 1 tablespoon olive oil into a medium pan over medium heat. When hot, add shallots and garlic; stir often until limp, about 2 minutes.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":11677,"name":"shallot","localizedName":"shallot","image":"shallots.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":2,"unit":"minutes"}},{"number":2,"step":"Trim ends from lemon grass stalks and peel off tough outer layers; crush with the flat side of a large knife, then cut into lengths that will fit in your pan. Stir curry paste, ginger, turmeric, and the lemon grass into pan; cook until fragrant, about 2 minutes.","ingredients":[{"id":93605,"name":"curry paste","localizedName":"curry paste","image":"chili-paste.png"},{"id":11972,"name":"lemon grass","localizedName":"lemon grass","image":"lemongrass.png"},{"id":2043,"name":"turmeric","localizedName":"turmeric","image":"turmeric.jpg"},{"id":11216,"name":"ginger","localizedName":"ginger","image":"ginger.png"}],"equipment":[{"id":404745,"name":"knife","localizedName":"knife","image":"chefs-knife.jpg"},{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":2,"unit":"minutes"}},{"number":3,"step":"Add coconut milk, fish sauce, sugar, and lime peel; simmer, stirring often, until slightly thickened, about 10 minutes.","ingredients":[{"id":12118,"name":"coconut milk","localizedName":"coconut milk","image":"coconut-milk.png"},{"id":6179,"name":"fish sauce","localizedName":"fish sauce","image":"asian-fish-sauce.jpg"},{"id":1009159,"name":"lime peel","localizedName":"lime peel","image":"zest-lime.jpg"},{"id":19335,"name":"sugar","localizedName":"sugar","image":"sugar-in-bowl.png"}],"equipment":[],"length":{"number":10,"unit":"minutes"}},{"number":4,"step":"Remove lemon grass.","ingredients":[{"id":11972,"name":"lemon grass","localizedName":"lemon grass","image":"lemongrass.png"}],"equipment":[]},{"number":5,"step":"Add salt to taste.","ingredients":[{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[]},{"number":6,"step":"Meanwhile, preheat oven to 45","ingredients":[],"equipment":[{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg"}]},{"number":7,"step":"Sprinkle both sides of fish with salt and pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[]},{"number":8,"step":"Pour remaining 1 1/2 tablespoons olive oil into a large ovenproof frying pan over medium-high heat.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":9,"step":"Add fish and cook until browned on the bottom, 3 to 4 minutes. Turn pieces and transfer pan to oven.","ingredients":[{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg"},{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":3,"unit":"minutes"}},{"number":10,"step":"Bake just until fish is opaque in center of thickest part, about 8 minutes.","ingredients":[{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg"}],"length":{"number":8,"unit":"minutes"}},{"number":11,"step":"Spoon curry sauce onto four plates and top with fish.","ingredients":[{"id":0,"name":"curry sauce","localizedName":"curry sauce","image":""},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[]},{"number":12,"step":"Wine pairing: Off-dry but crisp Riesling, with aromatic citrus, apple, and tropical notes over good minerals. Best in our pairing: Poet's Leap 2004 (Columbia Valley, WA; $22), V. Sattui off-dry Johannisberg 2004 (Napa Valley; $18), and Firestone 2004 (Central Coast, CA; $10).","ingredients":[{"id":14132,"name":"riesling","localizedName":"riesling","image":"white-wine.jpg"},{"id":9003,"name":"apple","localizedName":"apple","image":"apple.jpg"},{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[]},{"number":13,"step":"Flavor bridges: A little sugar in the Riesling matches the sweetness and tames the spice in the dish. Low alcohol and fruitiness lower the heat too. Sweetness in the wine also gives it weight--viscosity--to match the mouth-feel of the coconut milk. Good acid, on the other hand, cuts through that richness for a mouthwatering effect (a flabby wine would go flat). Citrus and tropical notes echo the lemon grass, lime, ginger, and aromatic spices in the curry.","ingredients":[{"id":12118,"name":"coconut milk","localizedName":"coconut milk","image":"coconut-milk.png"},{"id":11972,"name":"lemon grass","localizedName":"lemon grass","image":"lemongrass.png"},{"id":14132,"name":"riesling","localizedName":"riesling","image":"white-wine.jpg"},{"id":14037,"name":"alcohol","localizedName":"alcohol","image":"rum-dark.jpg"},{"id":11216,"name":"ginger","localizedName":"ginger","image":"ginger.png"},{"id":2035,"name":"spices","localizedName":"spices","image":"spices.png"},{"id":2015,"name":"curry powder","localizedName":"curry powder","image":"curry-powder.jpg"},{"id":19335,"name":"sugar","localizedName":"sugar","image":"sugar-in-bowl.png"},{"id":9159,"name":"lime","localizedName":"lime","image":"lime.jpg"},{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[]}]}]
