[{"name":"","steps":[{"number":1,"step":"Rinse shanks, pat dry, and arrange slightly apart in a 10- by 15-inch pan; sprinkle all over with pepper.","ingredients":[{"id":1002030,"name":"pepper","localizedName":"pepper","image":"pepper.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":2,"step":"Bake shanks in a 450 oven until well browned, 20 to 30 minutes.","ingredients":[],"equipment":[{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg"}],"length":{"number":20,"unit":"minutes"}},{"number":3,"step":"Meanwhile, in a 4 1/2-quart or larger electric slow-cooker, combine onion, bell pepper, celery, artichoke hearts, olives, capers, and basil. Set shanks on vegetables in cooker.","ingredients":[{"id":99242,"name":"artichoke hearts","localizedName":"artichoke hearts","image":"artichoke-hearts.png"},{"id":10211821,"name":"bell pepper","localizedName":"bell pepper","image":"bell-pepper-orange.png"},{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"},{"id":2054,"name":"capers","localizedName":"capers","image":"capers.jpg"},{"id":11143,"name":"celery","localizedName":"celery","image":"celery.jpg"},{"id":9195,"name":"olives","localizedName":"olives","image":"olives-mixed.jpg"},{"id":2044,"name":"basil","localizedName":"basil","image":"basil.jpg"},{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[]},{"number":4,"step":"Add tomatoes with juice, vinegar, and any lamb juices from baking pan.","ingredients":[{"id":10211693,"name":"tomatoes in juice","localizedName":"tomatoes in juice","image":"tomatoes-canned"},{"id":2053,"name":"vinegar","localizedName":"vinegar","image":"vinegar-(white).jpg"},{"id":10017224,"name":"lamb","localizedName":"lamb","image":"lamb-shanks.jpg"}],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"}]},{"number":5,"step":"Cover and cook until lamb is very tender when pierced with a fork, 6 to 6 1/2 hours on low, 4 to 4 1/2 hours on high.","ingredients":[{"id":10017224,"name":"lamb","localizedName":"lamb","image":"lamb-shanks.jpg"}],"equipment":[],"length":{"number":240,"unit":"minutes"}},{"number":6,"step":"With a slotted spoon, transfer each shank to a wide, shallow bowl and keep warm. Skim and discard fat from cooking liquid. Turn cooker to high. In a small bowl, mix cornstarch with 1 1/2 tablespoons water; pour into cooker and stir often until sauce is bubbling, about 10 minutes. Spoon sauce and vegetables over lamb, and sprinkle portions with parsley.","ingredients":[{"id":20027,"name":"corn starch","localizedName":"corn starch","image":"white-powder.jpg"},{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"},{"id":11297,"name":"parsley","localizedName":"parsley","image":"parsley.jpg"},{"id":0,"name":"sauce","localizedName":"sauce","image":""},{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":10017224,"name":"lamb","localizedName":"lamb","image":"lamb-shanks.jpg"}],"equipment":[{"id":404636,"name":"slotted spoon","localizedName":"slotted spoon","image":"slotted-spoon.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}],"length":{"number":10,"unit":"minutes"}}]}]
