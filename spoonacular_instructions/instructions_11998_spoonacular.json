[{"name":"","steps":[{"number":1,"step":"Put the basil and celery leaves in a food processor. With the motor running, add the oil in a thin steady stream and process until the leaves are finely chopped, about 1 minute.","ingredients":[{"id":10011143,"name":"celery leaves","localizedName":"celery leaves","image":"celery-leaves.jpg"},{"id":2044,"name":"basil","localizedName":"basil","image":"basil.jpg"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404771,"name":"food processor","localizedName":"food processor","image":"food-processor.png"}],"length":{"number":1,"unit":"minutes"}},{"number":2,"step":"Add the garlic, nuts and lemon zest and process for another 20 seconds or until the nuts are finely chopped, but not a paste. If you process too long, the machine will heat up the pesto, cook the basil and cause it to discolor.","ingredients":[{"id":9156,"name":"lemon zest","localizedName":"lemon zest","image":"zest-lemon.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":2044,"name":"basil","localizedName":"basil","image":"basil.jpg"},{"id":93698,"name":"pesto","localizedName":"pesto","image":"basil-pesto.png"},{"id":12135,"name":"nuts","localizedName":"nuts","image":"nuts-mixed.jpg"}],"equipment":[]},{"number":3,"step":"Transfer the pesto to a bowl. Stir in the cheese and celery. Taste and adjust seasoning.","ingredients":[{"id":1042027,"name":"seasoning","localizedName":"seasoning","image":"seasoning.png"},{"id":11143,"name":"celery","localizedName":"celery","image":"celery.jpg"},{"id":1041009,"name":"cheese","localizedName":"cheese","image":"cheddar-cheese.png"},{"id":93698,"name":"pesto","localizedName":"pesto","image":"basil-pesto.png"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]}]}]
