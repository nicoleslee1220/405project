[{"name":"","steps":[{"number":1,"step":"In a large glass bowl, dissolve the salt in the water.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":2,"step":"Add the cabbage, carrot and daikon. Cover with a plate. Set a sheet of plastic wrap on the plate and top with a heavy pot to keep the vegetables submerged.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"},{"id":11109,"name":"cabbage","localizedName":"cabbage","image":"cabbage.jpg"},{"id":11124,"name":"carrot","localizedName":"carrot","image":"sliced-carrot.png"},{"id":11430,"name":"daikon radish","localizedName":"daikon radish","image":"daikon.jpg"},{"id":10018364,"name":"wrap","localizedName":"wrap","image":"flour-tortilla.jpg"}],"equipment":[{"id":404730,"name":"plastic wrap","localizedName":"plastic wrap","image":"plastic-wrap.jpg"},{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}]},{"number":3,"step":"Let stand at room temperature until the vegetables are covered with 1 inch of liquid, 2 hours.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"}],"equipment":[],"length":{"number":120,"unit":"minutes"}},{"number":4,"step":"Pour off the liquid and reserve it. Lightly rinse the vegetables in a colander, then drain.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"}],"equipment":[{"id":404639,"name":"colander","localizedName":"colander","image":"colander.jpg"}]},{"number":5,"step":"Transfer the vegetables to a clean large bowl.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":6,"step":"Add the garlic, scallions, ginger, red chiles and chile powder and toss well.","ingredients":[{"id":2009,"name":"chili powder","localizedName":"chili powder","image":"chili-powder.jpg"},{"id":10511819,"name":"red chili pepper","localizedName":"red chili pepper","image":"red-chili.jpg"},{"id":11291,"name":"green onions","localizedName":"green onions","image":"spring-onions.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":11216,"name":"ginger","localizedName":"ginger","image":"ginger.png"}],"equipment":[]},{"number":7,"step":"Tightly pack the vegetables into a wide-mouthed 1-quart jar; add enough of the reserved liquid to cover. Using a chopstick, poke out any air bubbles. Press a small bowl on top of the vegetables to keep them submerged. Cover loosely.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"}],"equipment":[{"id":405596,"name":"chopsticks","localizedName":"chopsticks","image":"chopsticks.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":8,"step":"Let stand in a cool place for 5 days, adding more reserved liquid as needed to keep the vegetables covered.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"}],"equipment":[]},{"number":9,"step":"Discard any liquid and seal the jar. Refrigerate the kimchi for up to 1 month.","ingredients":[{"id":98860,"name":"kimchi","localizedName":"kimchi","image":"kimchi.png"}],"equipment":[]}]}]
