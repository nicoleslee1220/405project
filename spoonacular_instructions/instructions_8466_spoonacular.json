[{"name":"","steps":[{"number":1,"step":"Heat the olive oil in a deep 12-inch skillet.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":2,"step":"Add the sliced scallions and cook over high heat for 1 minute, until barely softened.","ingredients":[{"id":11291,"name":"green onions","localizedName":"green onions","image":"spring-onions.jpg"}],"equipment":[],"length":{"number":1,"unit":"minutes"}},{"number":3,"step":"Add the spinach and arugula and cook, stirring, just until wilted, about 2 minutes.","ingredients":[{"id":11959,"name":"arugula","localizedName":"arugula","image":"arugula-or-rocket-salad.jpg"},{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"}],"equipment":[],"length":{"number":2,"unit":"minutes"}},{"number":4,"step":"Add the rice and cook, stirring, until it's coated with the olive oil and the grains begin to turn a milky-white color, about 3 minutes.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":0,"name":"grains","localizedName":"grains","image":""},{"id":20444,"name":"rice","localizedName":"rice","image":"uncooked-white-rice.png"}],"equipment":[],"length":{"number":3,"unit":"minutes"}},{"number":5,"step":"Stir 3 1/2 cups of the broth into the rice.","ingredients":[{"id":1006615,"name":"broth","localizedName":"broth","image":"chicken-broth.png"},{"id":20444,"name":"rice","localizedName":"rice","image":"uncooked-white-rice.png"}],"equipment":[]},{"number":6,"step":"Add the tomatoes, paprika, saffron, water, 1 tablespoon of kosher salt and 1/2 teaspoon freshly ground pepper; bring to a boil. Cook the Bomba rice, tomatoes and greens over moderately high heat, stirring occasionally, until some of the chicken broth has been absorbed, about 5 minutes.","ingredients":[{"id":6194,"name":"chicken broth","localizedName":"