[{"name":"","steps":[{"number":1,"step":"In a small bowl combine the shallot, pomegranate molasses, vinegar, salt and pepper and whisk until the salt is dissolved.","ingredients":[{"id":99279,"name":"pomegranate molasses","localizedName":"pomegranate molasses","image":"molasses.jpg"},{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":11677,"name":"shallot","localizedName":"shallot","image":"shallots.jpg"},{"id":2053,"name":"vinegar","localizedName":"vinegar","image":"vinegar-(white).jpg"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":2,"step":"Whisk in the olive oil and let vinaigrette stand at room temperature until salad is assembled.","ingredients":[{"id":4135,"name":"vinaigrette","localizedName":"vinaigrette","image":"vinaigrette.jpg"},{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"}],"equipment":[{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"}]},{"number":3,"step":"Combine the arugula, romaine, pears and half of the pomegranate seeds in a large bowl.","ingredients":[{"id":9286,"name":"pomegranate seeds","localizedName":"pomegranate seeds","image":"pomegranate-seeds.jpg"},{"id":11959,"name":"arugula","localizedName":"arugula","image":"arugula-or-rocket-salad.jpg"},{"id":10111251,"name":"romaine","localizedName":"romaine","image":"romaine"},{"id":9252,"name":"pear","localizedName":"pear","image":"pears-bosc.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":4,"step":"Crumble half of the goat cheese over the ingredients in the bowl (this works best if the cheese is very cold).","ingredients":[{"id":1159,"name":"goat cheese","localizedName":"goat cheese","image":"goat-cheese.jpg"},{"id":1041009,"name":"cheese","