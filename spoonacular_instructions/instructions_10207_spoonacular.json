[{"name":"","steps":[{"number":1,"step":"Cut the meat off the shank bones. In a medium saucepan, cover the bones with water and bring to a boil. Prepare a medium bowl of ice water.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":1065062,"name":"meat","localizedName":"meat","image":"whole-chicken.jpg"}],"equipment":[{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":2,"step":"Transfer the bones to the ice water to cool, then pat dry.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[]},{"number":3,"step":"Heat 1 tablespoon of the oil in a large skillet.","ingredients":[{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":4,"step":"Add the onions, cut side down, and cook over moderately high heat until blackened on the bottom, about 12 minutes; remove to a plate.","ingredients":[{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[],"length":{"number":12,"unit":"minutes"}},{"number":5,"step":"Heat the remaining 1 tablespoon of oil in the skillet.","ingredients":[{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":6,"step":"Spread the ginger slices in a single layer and cook over moderately high heat until blackened, about 12 minutes.","ingredients":[{"id":11216,"name":"ginger","localizedName":"ginger","image":"ginger.png"},{"id":0,"name":"spread","localizedName":"spread","image":""}],"equipment":[],"length":{"number":12,"unit":"minutes"}},{"number":7,"step":"In a medium skillet, toast the star anise pods, cinnamon sticks, cloves and c