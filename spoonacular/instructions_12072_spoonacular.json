[{"name":"","steps":[{"number":1,"step":"In a large saucepan, combine the lemon slices with 1 cup of the sugar and 2 cups of water and bring to a boil over high heat. Reduce the heat to low and simmer, stirring occasionally, until the lemons are translucent and the liquid is syrupy, about 30 minutes.","ingredients":[{"id":9150,"name":"lemon","localizedName":"lemon","image":"lemon.png"},{"id":19335,"name":"sugar","localizedName":"sugar","image":"sugar-in-bowl.png"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"}],"length":{"number":30,"unit":"minutes"}},{"number":2,"step":"Let the lemons cool completely in the syrup, then transfer the lemons to a cutting board and finely chop them. Reserve the lemon syrup for another use.","ingredients":[{"id":9150,"name":"lemon","localizedName":"lemon","image":"lemon.png"},{"id":0,"name":"syrup","localizedName":"syrup","image":""}],"equipment":[{"id":404716,"name":"cutting board","localizedName":"cutting board","image":"cutting-board.jpg"}]},{"number":3,"step":"Meanwhile, bring a large saucepan of water to a boil over high heat.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"}]},{"number":4,"step":"Add the edamame and cook until they are tender, about 2 minutes.","ingredients":[{"id":11212,"name":"edamame","localizedName":"edamame","image":"edamame.png"}],"equipment":[],"length":{"number":2,"unit":"minutes"}},{"number":5,"step":"Drain and cool the edamame under running water; pat dry.","ingredients":[{"id":11212,"name":"edamame","localizedName":"edamame","image":"edamame.png"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[]},{"number":6,"step":"Transfer the edamame to a large bowl.","ingredients":[{"id":11212,"name":"edamame","localizedN