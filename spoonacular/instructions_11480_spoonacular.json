[{"name":"","steps":[{"number":1,"step":"In a large stainless steel or cast iron pot, combine the salt, water and brisket. Cover and let sit for 7 days in the refrigerator. (Note: brisket must be completely submerged, so double the salt and water if necessary.)","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}]},{"number":2,"step":"After 7 days, drain the brine and add 1 gallon fresh water, bay leaves and peppercorns. Bring to a boil, reduce heat to low/medium low, and simmer for 3 to 3 1/2 hours.","ingredients":[{"id":1022030,"name":"peppercorns","localizedName":"peppercorns","image":"black-pepper.png"},{"id":2004,"name":"bay leaves","localizedName":"bay leaves","image":"bay-leaves.jpg"},{"id":93798,"name":"brine","localizedName":"brine","image":""},{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[],"length":{"number":120,"unit":"minutes"}},{"number":3,"step":"During the last 45 minutes of cooking, add the onion, cabbage, carrots, turnip, cilantro, and potatoes. Continue simmering until all vegetables are tender.","ingredients":[{"id":11583,"name":"vegetable","localizedName":"vegetable","image":"mixed-vegetables.png"},{"id":11165,"name":"cilantro","localizedName":"cilantro","image":"cilantro.png"},{"id":11352,"name":"potato","localizedName":"potato","image":"potatoes-yukon-gold.png"},{"id":11109,"name":"cabbage","localizedName":"cabbage","image":"cabbage.jpg"},{"id":11124,"name":"carrot","localizedName":"carrot","image":"sliced-carrot.png"},{"id":11564,"name":"turnip","localizedName":"turnip","image":"turnips.png"},{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[],"length":{"number":45,"unit":"minutes"}}]}]
