e chicken.","ingredients":[{"id":5006,"name":"whole chicken","localizedName":"whole chicken","image":"whole-chicken.jpg"},{"id":15175,"name":"squid","localizedName":"squid","image":"calamari-or-squid.jpg"}],"equipment":[]},{"number":13,"step":"Return 2 tablespoons of the reserved fat to the pan.","ingredients":[],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":14,"step":"Add the onion and garlic, season with salt and pepper and cook, stirring occasionally, until translucent, about 5 minutes.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[],"length":{"number":5,"unit":"minutes"}},{"number":15,"step":"Transfer the onion mixture to the platter.","ingredients":[{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[]},{"number":16,"step":"Return 2 additional tablespoons of the reserved fat to the pan. Stir in the rice and cook over moderately high heat for 2 minutes.","ingredients":[{"id":20444,"name":"rice","localizedName":"rice","image":"uncooked-white-rice.png"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":2,"unit":"minutes"}},{"number":17,"step":"Add the chicken, chorizo, squid and onion mixture to the pan along with any accumulated juices. Stir in the peas. Gently pour the warmed stock into the pan. Cover and cook for 10 minutes.","ingredients":[{"id":5006,"name":"whole chicken","localizedName":"whole chicken","image":"whole-chicken.jpg"},{"id":99233,"name":"chorizo","localizedName":"chorizo","image":"chorizo.jpg"},{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"},{"id":15175,"name":"squid","localizedName":"squid","image":"calamari-or-squid