[{"name":"","steps":[{"number":1,"step":"Using a sharp knife, remove the skin from the prosciutto and cut it into 1-inch pieces.","ingredients":[{"id":10010123,"name":"prosciutto","localizedName":"prosciutto","image":"proscuitto.jpg"}],"equipment":[{"id":404745,"name":"knife","localizedName":"knife","image":"chefs-knife.jpg"}]},{"number":2,"step":"Cut the prosciutto meat and fat into 1-inch pieces and coarsely grind in a meat grinder or coarsely chop in a food processor, pulsing several times.","ingredients":[{"id":10010123,"name":"prosciutto","localizedName":"prosciutto","image":"proscuitto.jpg"},{"id":1065062,"name":"meat","localizedName":"meat","image":"whole-chicken.jpg"}],"equipment":[{"id":404771,"name":"food processor","localizedName":"food processor","image":"food-processor.png"},{"id":404700,"name":"meat grinder","localizedName":"meat grinder","image":"meat-grinder.jpg"}]},{"number":3,"step":"Transfer the ground prosciutto and the pieces of skin to a large soup pot.","ingredients":[{"id":10010123,"name":"prosciutto","localizedName":"prosciutto","image":"proscuitto.jpg"},{"id":0,"name":"soup","localizedName":"soup","image":""}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}]},{"number":4,"step":"Add the carrot, onion, garlic, fennel seeds and rosemary and cook over moderate heat, stirring, until the fat is rendered, about 10 minutes.","ingredients":[{"id":2018,"name":"fennel seeds","localizedName":"fennel seeds","image":"fennel-seeds.jpg"},{"id":2036,"name":"rosemary","localizedName":"rosemary","image":"rosemary.jpg"},{"id":11124,"name":"carrot","localizedName":"carrot","image":"sliced-carrot.png"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"}],"equipment":[],"length":{"number":10,"unit":"minutes"}},{"number":5,"step":"Add the cold water and bring to a boil. Simmer over moderately low heat until the broth is flavorful and reduced to 10 cups, about 1 1/2 hours. Strain the broth into a clean soup pot and refrigerate until chilled. Discard the solids.","ingredients":[{"id":1006615,"name":"broth","localizedName":"broth","image":"chicken-broth.png"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":0,"name":"soup","localizedName":"soup","image":""}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}],"length":{"number":120,"unit":"minutes"}},{"number":6,"step":"Skim the fat from the broth and discard. In a medium bowl, knead the ground pork with the egg whites and lemon juice and stir it into the cold prosciutto broth. Slowly bring the broth to a simmer, stirring constantly until the pork mixture rises completely to the top. Stir gently to dislodge any pork from the bottom of the pot. Simmer over moderately low heat, undisturbed, for 15 minutes. Using a skimmer or a slotted spoon, gently remove the \"raft\" from the broth and discard.","ingredients":[{"id":10219,"name":"ground pork","localizedName":"ground pork","image":"meat-ground.jpg"},{"id":9152,"name":"lemon juice","localizedName":"lemon juice","image":"lemon-juice.jpg"},{"id":1124,"name":"egg whites","localizedName":"egg whites","image":"egg-white.jpg"},{"id":10010123,"name":"prosciutto","localizedName":"prosciutto","image":"proscuitto.jpg"},{"id":1006615,"name":"broth","localizedName":"broth","image":"chicken-broth.png"},{"id":10010219,"name":"pork","localizedName":"pork","image":"pork-tenderloin-raw.png"}],"equipment":[{"id":404636,"name":"slotted spoon","localizedName":"slotted spoon","image":"slotted-spoon.jpg"},{"id":405894,"name":"skimmer","localizedName":"skimmer","image":"skimmer-spoon.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"},{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}],"length":{"number":15,"unit":"minutes"}},{"number":7,"step":"Line a sieve with cheesecloth. Strain the consomm into a saucepan. Skim off any remaining fat from the surface. Season the consomm with salt and keep warm.","ingredients":[{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[{"id":404647,"name":"cheesecloth","localizedName":"cheesecloth","image":"cheesecloth.jpg"},{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"},{"id":405600,"name":"sieve","localizedName":"sieve","image":"strainer.png"}]},{"number":8,"step":"Place the melon balls and prosciutto ribbons in 4 shallow soup bowls and top with the arugula. Ladle 1 cup of the warm consomm into each bowl and serve.","ingredients":[{"id":10010123,"name":"prosciutto","localizedName":"prosciutto","image":"proscuitto.jpg"},{"id":11959,"name":"arugula","localizedName":"arugula","image":"arugula-or-rocket-salad.jpg"},{"id":0,"name":"melon","localizedName":"melon","image":"mixed-fresh-fruit.jpg"},{"id":0,"name":"soup","localizedName":"soup","image":""}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"},{"id":404630,"name":"ladle","localizedName":"ladle","image":"ladle.jpg"}]}]}]
