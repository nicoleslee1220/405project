[{"name":"","steps":[{"number":1,"step":"Drizzle some oil in a large pot of boiling salted water, add 1 tablespoon of salt and the linguine, and cook for 7 to 10 minutes, or according to the directions on the package.","ingredients":[{"id":10720420,"name":"linguine","localizedName":"linguine","image":"spaghetti.jpg"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}],"length":{"number":7,"unit":"minutes"}},{"number":2,"step":"Meanwhile, in another large (12-inch), heavy-bottomed pan, melt the butter and olive oil over medium-low heat.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":3,"step":"Add the garlic.","ingredients":[{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[]},{"number":4,"step":"Saute for 1 minute. Be careful, the garlic burns easily!","ingredients":[{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[],"length":{"number":1,"unit":"minutes"}},{"number":5,"step":"Add the shrimp, 1 1/2 teaspoons of salt, and the pepper and saute until the shrimp have just turned pink, about 5 minutes, stirring often.","ingredients":[{"id":1002030,"name":"pepper","localizedName":"pepper","image":"pepper.jpg"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[],"length":{"number":5,"unit":"minutes"}},{"number":6,"step":"Add wine and cook for about 30 seconds.","ingredients":[{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[]},{"number":7,"step":"Remove from the heat, add the parsley, lemon zest, lemon juice, peas, mushrooms and red pepper flakes. Toss to combine.","ingredients":[{"id":1032009,"name":"red pepper flakes","localizedName":"red pepper flakes","image":"red-pepper-flakes.jpg"},{"id":9152,"name":"lemon juice","localizedName":"lemon juice","image":"lemon-juice.jpg"},{"id":9156,"name":"lemon zest","localizedName":"lemon zest","image":"zest-lemon.jpg"},{"id":11260,"name":"mushrooms","localizedName":"mushrooms","image":"mushrooms.png"},{"id":11297,"name":"parsley","localizedName":"parsley","image":"parsley.jpg"},{"id":11304,"name":"peas","localizedName":"peas","image":"peas.jpg"}],"equipment":[]},{"number":8,"step":"When the pasta is done, drain the cooked linguine and then put it back in the pot. Immediately add the shrimp and sauce, toss well, and serve.","ingredients":[{"id":10720421,"name":"cooked linguine","localizedName":"cooked linguine","image":"spaghetti.jpg"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"},{"id":20420,"name":"pasta","localizedName":"pasta","image":"fusilli.jpg"},{"id":0,"name":"sauce","localizedName":"sauce","image":""}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}]}]}]
