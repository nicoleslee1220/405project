[{"name":"","steps":[{"number":1,"step":"Combine the flour, 1 teaspoon of salt, and 1/4 teaspoon of black pepper in a gallon zip-top bag. Pat the trout dry and toss to coat in the bag with the seasoned flour.","ingredients":[{"id":98980,"name":"seasoned flour","localizedName":"seasoned flour","image":"flour.png"},{"id":1002030,"name":"black pepper","localizedName":"black pepper","image":"pepper.jpg"},{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"},{"id":0,"name":"trout","localizedName":"trout","image":"fish-fillet.jpg"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[]},{"number":2,"step":"Heat the olive oil in a 12-inch saute pan set over medium-high heat until it shimmers. Carefully add the trout to the pan. Cook on each side for 1 minute.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":0,"name":"trout","localizedName":"trout","image":"fish-fillet.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":1,"unit":"minutes"}},{"number":3,"step":"Using tongs or a fish spatula, transfer the trout to a 13 by 9-inch glass baking dish. Reduce the heat to medium, add the onion, and cook until translucent, approximately 5 minutes.","ingredients":[{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"},{"id":0,"name":"trout","localizedName":"trout","image":"fish-fillet.jpg"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[{"id":406921,"name":"glass baking pan","localizedName":"glass baking pan","image":"glass-baking-tray.jpg"},{"id":404642,"name":"spatula","localizedName":"spatula","image":"spatula-or-turner.jpg"},{"id":404641,"name":"tongs","localizedName":"tongs","image":"tongs.jpg"}],"length":{"number":5,"unit":"minutes"}},{"number":4,"step":"Add the garlic and cook for an additional minute.","ingredients"