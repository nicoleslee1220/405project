[{"name":"","steps":[{"number":1,"step":"For the sauce; combine the lime juice, wine, garlic and shallots in a wide pan, bring to a boil and reduce to 1/4 the volume.","ingredients":[{"id":9160,"name":"lime juice","localizedName":"lime juice","image":"lime-juice.png"},{"id":11677,"name":"shallot","localizedName":"shallot","image":"shallots.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":0,"name":"sauce","localizedName":"sauce","image":""},{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":2,"step":"Pour into a bowl and stir in the cream.","ingredients":[{"id":1053,"name":"cream","localizedName":"cream","image":"fluid-cream.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":3,"step":"Whisk in the butter, 1 TBS at a time, until thoroughly combined.Stir in the fresh basil and hold the sauce in a warm place until ready to serve.For the spinach, slice the garlic into thin slivers.","ingredients":[{"id":2044,"name":"fresh basil","localizedName":"fresh basil","image":"fresh-basil.jpg"},{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"},{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":0,"name":"sauce","localizedName":"sauce","image":""}],"equipment":[{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"}]},{"number":4,"step":"Heat a large saute pan over medium heat for 30 seconds.","ingredients":[],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":5,"step":"Add the butter and, when half of it has melted, add the garlic.Cook, stirring constantly, for about 45 seconds or until the garlic is tender and fragrant.","ingredients":[{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[]},{"number":6,"step":"Add the spinach leaves, and season with salt and pepper.Use tongs or a spatula to stir the spinach so it cooks evenly.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"}],"equipment":[{"id":404642,"name":"spatula","localizedName":"spatula","image":"spatula-or-turner.jpg"},{"id":404641,"name":"tongs","localizedName":"tongs","image":"tongs.jpg"}]},{"number":7,"step":"Remove from heat when all spinach leaves have wilted, setting aside to keep warm while you cook the fish.Divide the fillets into 4 pieces.","ingredients":[{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[]},{"number":8,"step":"Sprinkle lightly with the salt, sugar, pepper and paprika.","ingredients":[{"id":2028,"name":"paprika","localizedName":"paprika","image":"paprika.jpg"},{"id":1002030,"name":"pepper","localizedName":"pepper","image":"pepper.jpg"},{"id":19335,"name":"sugar","localizedName":"sugar","image":"sugar-in-bowl.png"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[]},{"number":9,"step":"Place a large non-stick skillet over high heat.When hot add the oil and butter.When the butter begins to melt, swirl to coat the pan.","ingredients":[{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":10,"step":"Place the fish in the pan and cook for 5 minutes; turning gently until fish flakes easily, do not over cook.To serve, place the spinach in an attractive mound on a heated plate, top with the fish fillets and spoon sauce over.","ingredients":[{"id":10115261,"name":"fish fillets","localizedName":"fish fillets","image":"fish-fillet.jpg"},{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"},{"id":0,"name":"sauce","localizedName":"sauce","image":""},{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":5,"unit":"minutes"}},{"number":11,"step":"Serve at once!","ingredients":[],"equipment":[]}]}]
