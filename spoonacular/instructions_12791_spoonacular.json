[{"name":"","steps":[{"number":1,"step":"In a small skillet, toast the fennel seeds over moderate heat until fragrant, about 40 seconds.","ingredients":[{"id":2018,"name":"fennel seeds","localizedName":"fennel seeds","image":"fennel-seeds.jpg"},{"id":18070,"name":"toast","localizedName":"toast","image":"toast"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":2,"step":"Transfer the seeds to a mortar to cool, then pound to a coarse powder. In a small bowl, cover the ground fennel with 2 tablespoons of the grapeseed oil and let stand until flavorful, at least 30 minutes. Strain the fennel oil.","ingredients":[{"id":4517,"name":"grape seed oil","localizedName":"grape seed oil","image":"vegetable-oil.jpg"},{"id":98953,"name":"ground fennel","localizedName":"ground fennel","image":"hemp-protein-powder.png"},{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"},{"id":93818,"name":"seeds","localizedName":"seeds","image":"sunflower-seeds.jpg"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404751,"name":"mortar and pestle","localizedName":"mortar and pestle","image":"mortar-and-pestle.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}],"length":{"number":30,"unit":"minutes"}},{"number":3,"step":"Thinly slice the fennel on a mandoline.","ingredients":[{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"}],"equipment":[{"id":404687,"name":"mandoline","localizedName":"mandoline","image":"mandoline-slicer.png"}]},{"number":4,"step":"Spread the fennel in a large, wide baking dish in an even layer.","ingredients":[{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"},{"id":0,"name":"spread","localizedName":"spread","image":""}],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"}]},{"number":5,"step":"Pour the grapefruit, orange and lime juices plus 1/4 cup of the lemon juice over the fennel and refrigerate for 1 1/2 hours.","ingredients":[{"id":9152,"name":"lemon juice","localizedName":"lemon juice","image":"lemon-juice.jpg"},{"id":9112,"name":"grapefruit","localizedName":"grapefruit","image":"grapefruit.png"},{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"},{"id":9200,"name":"orange","localizedName":"orange","image":"orange.png"},{"id":9159,"name":"lime","localizedName":"lime","image":"lime.jpg"}],"equipment":[],"length":{"number":120,"unit":"minutes"}},{"number":6,"step":"Drain the citrus juices into a medium saucepan and boil over high heat until reduced to 1/2 cup, about 20 minutes.","ingredients":[],"equipment":[{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"}],"length":{"number":20,"unit":"minutes"}},{"number":7,"step":"Pour the juice into a bowl set in ice water and chill thoroughly.","ingredients":[{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":1019016,"name":"juice","localizedName":"juice","image":"apple-juice.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":8,"step":"Transfer the juice to a blender and, with the machine on, slowly add the olive oil and the remaining 1 tablespoon of grapeseed oil until emulsified.","ingredients":[{"id":4517,"name":"grape seed oil","localizedName":"grape seed oil","image":"vegetable-oil.jpg"},{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":1019016,"name":"juice","localizedName":"juice","image":"apple-juice.jpg"}],"equipment":[{"id":404726,"name":"blender","localizedName":"blender","image":"blender.png"}]},{"number":9,"step":"Pour the dressing into a bowl, add the remaining 1 teaspoon of lemon juice and season with salt and pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":9152,"name":"lemon juice","localizedName":"lemon juice","image":"lemon-juice.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":10,"step":"In a very large bowl, toss the fennel with the endives.","ingredients":[{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":11,"step":"Add the crab and dressing and toss lightly. Season with salt and pepper and arrange the salad in a large serving bowl or on a platter.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":15136,"name":"crab","localizedName":"crab","image":"crabmeat.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":12,"step":"Drizzle the fennel oil all over the slaw, garnish with the parsley leaves and serve.","ingredients":[{"id":11297,"name":"parsley","localizedName":"parsley","image":"parsley.jpg"},{"id":11957,"name":"fennel","localizedName":"fennel","image":"fennel.png"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[]}]}]
