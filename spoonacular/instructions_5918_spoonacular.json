[{"name":"Mix the flour mixture for shrimp","steps":[{"number":1,"step":"Combine the ingredients and set aside in container. This step can be done the day before dinner.","ingredients":[],"equipment":[]},{"number":2,"step":"Peel and cut the citrus fruit into sections over a plate.","ingredients":[{"id":0,"name":"citrus fruit","localizedName":"citrus fruit","image":"mixed-fresh-fruit.jpg"}],"equipment":[]},{"number":3,"step":"Drain the juice from the plate into a bowl. Season liberally with gray salt and black pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":1019016,"name":"juice","localizedName":"juice","image":"apple-juice.jpg"}],"equipment":[{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}]},{"number":4,"step":"Whisk in olive oil to form a vinaigrette (it should be in proportion, about 2 parts juice to 1 part olive oil).","ingredients":[{"id":4135,"name":"vinaigrette","localizedName":"vinaigrette","image":"vinaigrette.jpg"},{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":1019016,"name":"juice","localizedName":"juice","image":"apple-juice.jpg"}],"equipment":[{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"}]},{"number":5,"step":"Season citrus sections with salt and pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"}],"equipment":[]},{"number":6,"step":"Drizzle a little of the vinaigrette on them to marinate and put them on a platter.","ingredients":[{"id":4135,"name":"vinaigrette","localizedName":"vinaigrette","image":"vinaigrette.jpg"}],"equipment":[]},{"number":7,"step":"Have your fishmonger peel the prawns but leave the tails on for handles. Season liberally with salt and pepper. Preheat a saute pan on high. Dredge the shrimp in the flour mixture. This will give them a nice crust and allow them to stay crispy and fresh at room temperature.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"},{"id":0,"name":"crust","localizedName":"crust","image":""},{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":8,"step":"Add olive oil to the pan and put in 1 layer of shrimp. You want them to caramelize, so don't toss or move them.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":9,"step":"Add a little more oil if the flour absorbs what's in the pan. After about 3 minutes, turn over the prawns.","ingredients":[{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"},{"id":20081,"name":"all purpose flour","localizedName":"all purpose flour","image":"flour.png"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}],"length":{"number":3,"unit":"minutes"}},{"number":10,"step":"Let it caramelize, toss and turn out onto a cookie sheet.","ingredients":[{"id":10118192,"name":"cookies","localizedName":"cookies","image":"shortbread-cookies.jpg"}],"equipment":[{"id":404727,"name":"baking sheet","localizedName":"baking sheet","image":"baking-sheet.jpg"}]},{"number":11,"step":"Add about 1/4 cup more olive oil to the already hot saute pan.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":12,"step":"Drain pan juices from the cookie sheet into the saute pan.","ingredients":[{"id":10118192,"name":"cookies","localizedName":"cookies","image":"shortbread-cookies.jpg"}],"equipment":[{"id":404727,"name":"baking sheet","localizedName":"baking sheet","image":"baking-sheet.jpg"},{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":13,"step":"Add sliced garlic and let it get light brown.","ingredients":[{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[]},{"number":14,"step":"Add chiles and let them get soft.","ingredients":[{"id":11819,"name":"chili pepper","localizedName":"chili pepper","image":"red-chili.jpg"}],"equipment":[]},{"number":15,"step":"Add the basil and stand back - there's a lot of water in basil and it will pop.","ingredients":[{"id":2044,"name":"basil","localizedName":"basil","image":"basil.jpg"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"},{"id":0,"name":"pop","localizedName":"soft drink","image":""}],"equipment":[]},{"number":16,"step":"Let it get crispy, less than a minute. While this is happening, arrange prawns over the citrus salad.","ingredients":[{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"}],"equipment":[]},{"number":17,"step":"Add the orange zest to the basil/garlic/chile mixture in the saute pan. Season with salt and pepper, then spoon basil/garlic/chile mixture over the prawns.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":9216,"name":"orange zest","localizedName":"orange zest","image":"orange-zest.png"},{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"},{"id":2044,"name":"basil","localizedName":"basil","image":"basil.jpg"},{"id":11819,"name":"chili pepper","localizedName":"chili pepper","image":"red-chili.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":18,"step":"Toss the spinach with the citrus vinaigrette and mound on top of the prawns.","ingredients":[{"id":4135,"name":"vinaigrette","localizedName":"vinaigrette","image":"vinaigrette.jpg"},{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"},{"id":15270,"name":"shrimp","localizedName":"shrimp","image":"shrimp.png"}],"equipment":[]},{"number":19,"step":"Serve.","ingredients":[],"equipment":[]}]}]
