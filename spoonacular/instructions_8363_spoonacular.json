[{"name":"Make chickpea cake","steps":[{"number":1,"step":"Heat 1 tbsp. oil in a large, wide pot over medium heat. Cook onion, stirring often, until translucent, about 7 minutes.","ingredients":[{"id":11282,"name":"onion","localizedName":"onion","image":"brown-onion.png"},{"id":4582,"name":"cooking oil","localizedName":"cooking oil","image":"vegetable-oil.jpg"}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}],"length":{"number":7,"unit":"minutes"}},{"number":2,"step":"Add broth and heat until simmering.","ingredients":[{"id":1006615,"name":"broth","localizedName":"broth","image":"chicken-broth.png"}],"equipment":[]},{"number":3,"step":"Sprinkle in chickpea flour and yeast, whisking until smooth.","ingredients":[{"id":16157,"name":"chickpea flour","localizedName":"chickpea flour","image":"chickpea-flour-or-another-gluten-free-flour.jpg"},{"id":18375,"name":"yeast","localizedName":"yeast","image":"yeast-granules.jpg"}],"equipment":[{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"}]},{"number":4,"step":"Transfer mixture to a food processor. Pure until as smooth as baby food. Stir in thyme, fava leaves, and salt.","ingredients":[{"id":2049,"name":"thyme","localizedName":"thyme","image":"thyme.jpg"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"}],"equipment":[{"id":404771,"name":"food processor","localizedName":"food processor","image":"food-processor.png"}]},{"number":5,"step":"Pour into a greased 9- by 13-in. baking dish.","ingredients":[],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"}]},{"number":6,"step":"Lay a sheet of plastic wrap on top and use your hand to level mixture. Chill until cold, at least 1 1/2 hours and up to 2 days.","ingredients":[{"id":10018364,"name":"wrap","localizedName":"wrap","image":"flour-tortilla.jpg"}],"equipment":[{"id":404730,"name":"plastic wrap","localizedName":"plastic wrap","image":"plastic-wrap.jpg