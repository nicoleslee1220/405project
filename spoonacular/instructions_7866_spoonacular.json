[{"name":"","steps":[{"number":1,"step":"Cook the spaghetti in a large pot of boiling salted water until al dente.","ingredients":[{"id":11420420,"name":"spaghetti","localizedName":"spaghetti","image":"spaghetti.jpg"},{"id":14412,"name":"water","localizedName":"water","image":"water.png"}],"equipment":[{"id":404752,"name":"pot","localizedName":"pot","image":"stock-pot.jpg"}]},{"number":2,"step":"Meanwhile, in a large skillet, heat 1/4 cup of the olive oil until shimmering.","ingredients":[{"id":4053,"name":"olive oil","localizedName":"olive oil","image":"olive-oil.jpg"}],"equipment":[{"id":404645,"name":"frying pan","localizedName":"frying pan","image":"pan.png"}]},{"number":3,"step":"Add the garlic and cook over moderate heat until fragrant, about 30 seconds.","ingredients":[{"id":11215,"name":"garlic","localizedName":"garlic","image":"garlic.png"}],"equipment":[]},{"number":4,"step":"Add the pancetta and crushed red pepper and cook, stirring occasionally, until the pancetta is golden and crisp, about 5 minutes.","ingredients":[{"id":1032009,"name":"red pepper flakes","localizedName":"red pepper flakes","image":"red-pepper-flakes.jpg"},{"id":10410123,"name":"pancetta","localizedName":"pancetta","image":"pancetta.png"}],"equipment":[],"length":{"number":5,"unit":"minutes"}},{"number":5,"step":"Add the spinach and tuna, breaking up the tuna with a spoon.","ingredients":[{"id":10011457,"name":"spinach","localizedName":"spinach","image":"spinach.jpg"},{"id":10015121,"name":"tuna","localizedName":"tuna","image":"canned-tuna.png"}],"equipment":[]},{"number":6,"step":"Add the wine and cook until nearly evaporated, about 1 minute.","ingredients":[{"id":14084,"name":"wine","localizedName":"wine","image":"red-wine.jpg"}],"equipment":[],"length":{"number":1,"unit":"minutes"}},{"number":7,"step":"Drain the spaghetti, reserving 1/2 cup of the cooking liquid.","ingredients":[{"id":11420420,"name":"spaghetti","localizedName":"spaghetti","image":"spaghetti.jpg"}],"equipment":[]},{