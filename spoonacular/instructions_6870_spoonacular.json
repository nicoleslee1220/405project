[{"name":"","steps":[{"number":1,"step":"Position a rack in the upper third of the oven and heat the oven to 400F.    Melt 4 Tbs. of the butter in a medium saucepan or skillet over medium-low heat. Lightly brush the inside of a 9x13-inch Pyrex baking dish with some of the melted butter.","ingredients":[{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"}],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"},{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"},{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg","temperature":{"number":400.0,"unit":"Fahrenheit"}}]},{"number":2,"step":"Transfer 1 Tbs. of the melted butter to a small dish and keep warm.","ingredients":[{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"}],"equipment":[]},{"number":3,"step":"Add the scallions to the remaining butter in the saucepan and cook, stirring, until softened, about 2 min.    In a medium bowl, mix the melted scallion butter with the breadcrumbs, tarragon, beaten egg, 1/4 tsp. salt, and several grinds of pepper.    Lightly season the fillets on both sides with salt and pepper.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":18079,"name":"breadcrumbs","localizedName":"breadcrumbs","image":"breadcrumbs.jpg"},{"id":11291,"name":"green onions","localizedName":"green onions","image":"spring-onions.jpg"},{"id":2041,"name":"tarragon","localizedName":"tarragon","image":"tarragon.jpg"},{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"},{"id":1002030,"name":"pepper","localizedName":"pepper","image":"pepper.jpg"},{"id":2047,"name":"salt","localizedName":"salt","image":"salt.jpg"},{"id":1123,"name":"egg","localizedName":"egg","image":"egg.png"}],"equipment":[{"id":404669,"name":"sauce pan","localizedName":"sauce pan","image":"sauce-pan.jpg"},{"id":404783,"name":"bowl","localizedName":"bowl","image":"bowl.jpg"}],"length":{"number":2,"unit":"minutes"}},{"number":4,"step":"Lay a fillet on a work surface with the pointed end facing you. Mound a quarter of the stuffing on the pointed half of the fillet. Fold the wide, split end of the fillet over and press firmly (but dont squish) to cover the stuffing. Some stuffing will remain exposed.","ingredients":[{"id":18082,"name":"stuffing","localizedName":"stuffing","image":"stuffing-mix.png"}],"equipment":[]},{"number":5,"step":"Put the stuffed fillet in the buttered baking dish. Repeat with the remaining fillets.","ingredients":[],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"}]},{"number":6,"step":"Brush the tops of the fillets with the reserved tablespoon of melted butter.","ingredients":[{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"}],"equipment":[]},{"number":7,"step":"Pour the vermouth and chicken broth around, not over, the fillets.","ingredients":[{"id":6194,"name":"chicken broth","localizedName":"chicken broth","image":"chicken-broth.png"},{"id":14132,"name":"vermouth","localizedName":"vermouth","image":"vermouth.jpg"}],"equipment":[]},{"number":8,"step":"Bake until the fish feels firm but flaky and the insides of the fillets look opaque when pierced with the tip of a sharp knife, 20 to 25 min. Using a thin, flexible slotted metal spatula, transfer the fillets to four dinner plates.","ingredients":[{"id":10115261,"name":"fish","localizedName":"fish","image":"fish-fillet.jpg"}],"equipment":[{"id":404784,"name":"oven","localizedName":"oven","image":"oven.jpg"},{"id":404642,"name":"spatula","localizedName":"spatula","image":"spatula-or-turner.jpg"},{"id":404745,"name":"knife","localizedName":"knife","image":"chefs-knife.jpg"}],"length":{"number":20,"unit":"minutes"}},{"number":9,"step":"Add 1 Tbs. cold butter to the hot baking dish and whisk until the butter melts. Repeat with the remaining 1 Tbs. butter and the mustard. Season the sauce with salt and pepper and spoon over the fillets.","ingredients":[{"id":1102047,"name":"salt and pepper","localizedName":"salt and pepper","image":"salt-and-pepper.jpg"},{"id":2046,"name":"mustard","localizedName":"mustard","image":"regular-mustard.jpg"},{"id":1001,"name":"butter","localizedName":"butter","image":"butter-sliced.jpg"},{"id":0,"name":"sauce","localizedName":"sauce","image":""}],"equipment":[{"id":404646,"name":"baking pan","localizedName":"baking pan","image":"roasting-pan.jpg"},{"id":404661,"name":"whisk","localizedName":"whisk","image":"whisk.png"}]},{"number":10,"step":"Serve immediately.","ingredients":[],"equipment":[]}]},{"name":"nutrition information (per serving)","steps":[{"number":1,"step":"Size","ingredients":[],"equipment":[]},{"number":2,"step":"based on four servings, Calories","ingredients":[],"equipment":[]}]},{"name":"(kcal)","steps":[{"number":1,"step":"360, Fat","ingredients":[],"equipment":[]},{"number":2,"step":"20, Fat Calories","ingredients":[],"equipment":[]}]},{"name":"(g)","steps":[{"number":1,"step":"180, Saturated Fat","ingredients":[],"equipment":[]},{"number":2,"step":"11, Protein","ingredients":[],"equipment":[]},{"number":3,"step":"30, Monounsaturated Fat","ingredients":[],"equipment":[]},{"number":4,"step":"6, Carbohydrates","ingredients":[],"equipment":[]},{"number":5,"step":"360, Cholesterol","ingredients":[],"equipment":[]},{"number":6,"step":"165, Fiber","ingredients":[],"equipment":[]},{"number":7,"step":"Photo: Scott Phillips","ingredients":[],"equipment":[]},{"number":8,"step":"Rate this Recipe and View Reviews","ingredients":[],"equipment":[]}]},{"name":"(mg)","steps":[{"number":1,"step":"9, Polyunsaturated Fat","ingredients":[],"equipment":[]},{"number":2,"step":"2, Sodium","ingredients":[],"equipment":[]}]}]
